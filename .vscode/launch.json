    "version": "0.2.0",
    "configurations": [

        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}",
        },
        {
            "type": "java",
            "name": "Main",
            "request": "launch",
            "mainClass": "hadoop.mapreduce.Main",
            "projectName": "wordcount",
        },
        {
            "type": "java",
            "name": "WordCount",
            "request": "launch",
            "mainClass": "hadoop.mapreduce.tp1.WordCount",
            "projectName": "wordcount",
            "args": ["wordcount/src/main/resources/input/file.txt","wordcount/src/main/resources/output"]
        },
        {
            "type": "java",
            "name": "SalesJob",
            "request": "launch",
            "mainClass": "hadoop.mapreduce.application.SalesJob",
            "projectName": "wordcount",
            "args": ["wordcount/src/main/resources/input/sales.txt","wordcount/src/main/resources/output"]
        },
        {
            "type": "java",
            "name": "WordcountSpark",
            "request": "launch",
            "mainClass": "spark.batch.tp21.WordCountTask",
            "projectName": "wordcount-spark",
            "args": ["wordcount-spark/src/main/resources/Latin-Lipsum.txt","wordcount-spark/src/main/resources/output"]
        }
    ],
    

}